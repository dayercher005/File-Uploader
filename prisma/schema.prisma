generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid())
  name      String  
  email     String  @unique
  password  String  
  folders   Folders[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // contains session data
  expiresAt DateTime 
}

model Folders {
  id        String  @id @default(uuid())
  name      String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  files     Files[]
}

model Files {
  id        String  @id @default(uuid())
  name      String
  size      Int
  date      DateTime @default(now())
  folder    Folders @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId  String 
  publicURL String
}