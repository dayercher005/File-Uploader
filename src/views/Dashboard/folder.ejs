<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>File Ship</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <%- include('../partials/dashboardNavbar')%>

    <div class="dashbordContainer">

        <div class="dashboardHeader">

            <a href="/"><img class="arrow page" src="/images/back.svg"></a>

            <h3>Files in </h3>

            <div>
                <a class="button createFileButton" href="<%=folderParameters%>/create-file">Create a New File</a>
            </div>
        </div>

        <div class="folders-container">
            <% if(locals.folderDetails){%>
                <% folderDetails.files.map(file => { %>
                    <a href="/dashboard/<%=folderParameters%>/<%=file.id%>" class="file-link">
                        <div class="file-container">
                            <img class="folder-image" alt="folder-image" src="/images/file.png">
                            <h3 class="folder-name"><%= file.name %></h3>
                        </div>
                        <h3><%=file.size%></h3>
                    </a>
                <%})%>
            <%}%>
        </div>
        
    </div>

</body>